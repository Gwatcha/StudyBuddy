block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Make A Study-Buddy Posting
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='messsage') Message
      .col-md-7
        input.form-control(type='message', name='message', id='message', placeholder='Message', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='') Course
      .col-md-7
        input.form-control(type='course', name='course', id='course', placeholder='Course')
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.col-md-3.btn.btn-primary(type='submit')
          i.far.fa-user.fa-sm
          | Post
    .form-group
      .offset-sm-3.col-md-7.pl-2
        hr

