.limiter
  .container-login100(style="background-image: url('/loginPubic/images/bg-01.jpg');")
    .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-54
      form.login100-form.validate-form(action='/login' method='post')
        input(type='hidden', name='_csrf', value=_csrf)
        img.logo(src='/loginPublic/images/logo-rec.png')
        .wrap-input100.validate-input.m-b-23(data-validate='Username is reauired')
          span.label-input100 Username
          input.input100(type='email' name='email' placeholder='Type your email' id='email')
          span.focus-input100(data-symbol='')
        .wrap-input100.validate-input(data-validate='Password is required')
          span.label-input100 Password
          input.input100(type='password' name='password' placeholder='Type your password' autocomplete='current-password' id='password')
          span.focus-input100(data-symbol='')
        .text-right.p-t-8.p-b-31
          a(href='/forgot')
            | Forgot password?
        .container-login100-form-btn
          .wrap-login100-form-btn
            .login100-form-bgbtn
            button.login100-form-btn
              | Login
        .txt1.text-center.p-t-54.p-b-20
          span
            | Sign Up Using
        .flex-c-m
          a.login100-social-item.bg1(href='/auth/facebook')
            i.fa.fa-facebook
          a.login100-social-item.bg2(href='/auth/twitter')
            i.fa.fa-twitter
          a.login100-social-item.bg3(href='/auth/google')
            i.fa.fa-google
